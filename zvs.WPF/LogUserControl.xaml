<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:DataModel="clr-namespace:zvs.DataModel;assembly=zvs.DataModel" x:Class="zvs.WPF.LogUserControl" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Loaded="UserControl_Loaded" Unloaded="LogUserControl_OnUnloaded">
    <UserControl.Resources>
        <CollectionViewSource x:Key="LogEntryViewSource" d:DesignSource="{d:DesignInstance {x:Type DataModel:LogEntry}, CreateList=True}"/>
    </UserControl.Resources>
    <DockPanel>
        <Grid DockPanel.Dock="Bottom" >
            <Button Name="PurgeButton" Content="Purge Log" Padding="10 2" Margin="5" VerticalAlignment="Bottom" HorizontalAlignment="Left" Click="PurgeButton_Click" ></Button>
            <Button Name="ClearButton" Content="Clear Log" Padding="10 2" Margin="90 5 5 5" VerticalAlignment="Bottom" HorizontalAlignment="Left" Click="ClearButton_OnClick" ></Button>
            <Button Name="NextButton" Content="Previous 200" Padding="10 2" Margin="5" VerticalAlignment="Bottom" HorizontalAlignment="Right" Click="NextButton_Click"></Button>
        </Grid>
        <DataGrid  x:Name="LogDataGrid" Background="#FFF9F9F9"  VerticalAlignment="Stretch" 
                                   HorizontalAlignment="Stretch" AutoGenerateColumns="False" HorizontalGridLinesBrush="#FFE2E2E2" 
                  AlternatingRowBackground="#FFFFFCFC" GridLinesVisibility="Horizontal" 
                                   ItemsSource="{Binding Source={StaticResource LogEntryViewSource}}" SelectionUnit="FullRow" SelectionMode="Single" CanUserAddRows="False" BorderThickness="0" >
            <DataGrid.Columns>
                <DataGridTextColumn Width="140"  Header="Date" Binding="{Binding Datetime}" IsReadOnly="True" SortDirection="Descending" />
                <DataGridTextColumn Width="75" Header="Level" Binding="{Binding Level}" IsReadOnly="True"/>
                <DataGridTextColumn Width="150"  Header="Source" Binding="{Binding Source}" IsReadOnly="True"/>
                <DataGridTextColumn Width="*"  Header="Message" Binding="{Binding Message}" IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>

    </DockPanel>

</UserControl>
