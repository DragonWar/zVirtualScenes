<Window x:Class="zvs.WPF.Groups.GroupNameEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Group" Height="144" Width="423" Icon="/zVirtualScenes;component/Images/zvs32.ico" WindowStyle="ToolWindow" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" Loaded="Window_Loaded" Closed="GroupNameEditor_Closed_1" PreviewKeyDown="Window_PreviewKeyDown">
    <Grid>
        <TextBlock Text="Group Name" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="6,6,0,0"></TextBlock>
        <Button Name="CancelBtn" Content="Cancel" Margin="0,0,12,12" HorizontalAlignment="Right"  VerticalAlignment="Bottom" Click="CancelBtn_Click" TabIndex="3" FontSize="14" FontWeight="Medium" Background="#FFCCCCCC" Padding="10 5"  BorderBrush="{x:Null}"  BorderThickness="0"/>
        <Button Name="OkBtn" Content="OK"  HorizontalAlignment="Right" Margin="0,0,83,12"  VerticalAlignment="Bottom" Click="OkBtn_Click" TabIndex="2" FontSize="14" FontWeight="Medium" Background="#FFCCCCCC" Padding="10 5"  BorderBrush="{x:Null}"  BorderThickness="0" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="6,28,0,0" Name="GroupTxtBx" VerticalAlignment="Top" Width="349" PreviewKeyDown="GroupTxtBx_PreviewKeyDown" TabIndex="1" />
    </Grid>
</Window>
