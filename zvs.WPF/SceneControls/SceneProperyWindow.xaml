<Window x:Class="zvs.WPF.SceneControls.ScenePropertiesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:SceneControls="clr-namespace:zvs.WPF.SceneControls"
        Title="Scene Properties" Loaded="Window_Loaded_1" Height="350" Width="450" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" 
        Icon="/zVirtualScenes;component/Images/zvs32.ico" WindowStyle="ToolWindow">
    <Grid>
        <SceneControls:SceneProperties x:Name="SceneControl" Margin="0,0,0,55"></SceneControls:SceneProperties>
        <Button Name="DoneBtn" Content="Done" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom"  Click="DoneBtn_Click" FontSize="14" Padding="10 5" FontWeight="Medium" Background="#FFCCCCCC" BorderBrush="{x:Null}"  BorderThickness="0"/>
        <Button x:Name="ResetBtn" Content="Reset Scene State" ToolTip="Sets is running to false. Use if the application was closed in the middle of a scene execution." HorizontalAlignment="Left" Margin="10,0,0,10" VerticalAlignment="Bottom" 
                Click="ResetBtn_Click_1" FontSize="14" Padding="10 5" FontWeight="Medium" Background="#FFCCCCCC" BorderBrush="{x:Null}"  BorderThickness="0"/>
    </Grid>
</Window>
