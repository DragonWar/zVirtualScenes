<Window x:Class="zVirtualScenes_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:DeviceControls="clr-namespace:zVirtualScenes_WPF.DeviceControls"
        Title="MainWindow" Height="350" Width="525" Loaded="Window_Loaded" Unloaded="Window_Unloaded" Icon="/zVirtualScenes_WPF;component/audio-mixing-desk.ico" PreviewKeyDown="Window_PreviewKeyDown">
    <Window.Resources>
        <Style TargetType="ListViewItem">
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
        </Style>
    </Window.Resources>
    <TabControl>
        <TabItem Header="Devices">
            <DeviceControls:DeviceList></DeviceControls:DeviceList>
        </TabItem>
            <TabItem Header="Log">
        <DataGrid  Name="logListView" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" AutoGenerateColumns="False" HorizontalGridLinesBrush="{x:Null}" VerticalGridLinesBrush="{x:Null}" Background="#00000000">
            <DataGrid.Columns>
                <DataGridTextColumn Width="140" Header="Date" Binding="{Binding Datetime}" IsReadOnly="True" />
                <DataGridTextColumn Width="75" Header="Urgency" Binding="{Binding Urgency}" IsReadOnly="True"/>
                <DataGridTextColumn Width="100" Header="Source" Binding="{Binding Source}" IsReadOnly="True"/>
                <DataGridTextColumn Width="*"  Header="Description" Binding="{Binding Description}" IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>
</TabItem>
    </TabControl>
</Window>
