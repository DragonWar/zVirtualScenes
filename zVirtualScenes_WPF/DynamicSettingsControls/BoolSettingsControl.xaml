<UserControl x:Class="zVirtualScenes_WPF.DynamicSettingsControls.BoolSettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" Margin="0,0,0,10">
    <Grid>
        <CheckBox  Height="16" HorizontalAlignment="Left" Name="checkBox" VerticalAlignment="Top" Checked="checkBox_Checked" Unchecked="checkBox_Unchecked" >
            <CheckBox.Content>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <TextBlock Name="Label"  Text="Enable XYZ" Margin="0,0,5,0" FontWeight="Bold" TextTrimming="CharacterEllipsis"></TextBlock>
                    <TextBlock Grid.Column="1" Name="Details"  Text="This will enabled XYZ for abc." FontSize="9" VerticalAlignment="Center" TextTrimming="CharacterEllipsis"></TextBlock>
                </Grid>
            </CheckBox.Content>
        </CheckBox>
    </Grid>
</UserControl>
